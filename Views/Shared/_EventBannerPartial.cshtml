@model PaginationResponse<HaBuddies.Models.Event>

@{
    Dictionary<string, string> iconDict = new Dictionary<string, string>();
    iconDict.Add("Meeting", "<i class=\"fa-solid fa-heart\"></i>");
    iconDict.Add("Exercise", "<i class=\"fa-solid fa-dumbbell\"></i>");
}

@if (Model.Count > 0) {
    @foreach (HaBuddies.Models.Event evt in Model.Data)
    {
        if (evt.isOpen == true) {
            <div class="banner">
                <div class="evt-heading">
                    <span class="evt-category">@Html.Raw(iconDict[evt.category]) category = @evt.category</span>
                    <span class="evt-title">title = @evt.title</span>
                    <span class="evt-enrollsize">enrollSize = @evt.enrollSize</span>
                </div>
                <div class="evt-body">
                    <div class="evt-description">description = @evt.description</div>
                    <div class="evt-enddate">endDate = @evt.endDate</div>
                </div>
            </div>
        }
    }
}
else {
    <div>
        <span>nothing</span>
    </div>
}